<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wisevoice.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Wise Voice</name>
    <description>
        Secure P2P Voice Chat
    </description>
    <author email="dev@wisevoice.com" href="http://wisevoice.com">
        Wise Voice Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <!-- Android Specific Configuration -->
    <platform name="android">
        <allow-intent href="market:*" />
        
        <!-- Request Microphone Permissions -->
        <config-file parent="/*" target="AndroidManifest.xml">
            <uses-permission name="android.permission.RECORD_AUDIO" />
            <uses-permission name="android.permission.MODIFY_AUDIO_SETTINGS" />
            <uses-permission name="android.permission.INTERNET" />
        </config-file>
    </platform>
</widget>